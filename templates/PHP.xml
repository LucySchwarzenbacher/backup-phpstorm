<templateSet group="PHP">
  <template name="dbg" value="if(\Pimcore::inDebugMode()) {&#10;  $END$ &#10;}" description="elements debug mode" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="dbgh" value="if(\Pimcore::inDebugMode()) { ?&gt;&#10;  $END$ &#10;&lt;?php }" description="elements debug mode in HTML" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="if" value="if($CONDITION$) {&#10;    $END$&#10;}&#10;    " description="'if' statement" toReformat="true" toShortenFQNames="true">
    <variable name="CONDITION" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>